<%= simple_form_for(@post, html: { class: 'form-vertical' }) do |f| %>
  <%= f.input :body,
              as: :text,
              label: 'Message',
              error: 'Message is mandatory, please specify one',
              placeholder: 'I am proud of myself because ...',
              autofocus: true,
              input_html: {rows:  10, class: "materialize-textarea"} %>
  <%= f.submit "Submit Post", "data-disable-with"=> "Just a moment...", class: "btn waves-effect waves-light" %>
<% end %>